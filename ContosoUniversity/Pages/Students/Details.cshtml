@page
@model ContosoUniversity.Pages.Students.DetailsModel

@{
    ViewData["Title"] = "Details";
}
<h1>Details</h1>

<div>
    <h4>Student</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CongNhan.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CongNhan.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CongNhan.FirstMidName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CongNhan.FirstMidName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CongNhan.BirthDay)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CongNhan.BirthDay)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CongNhan.bangDangKies)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Calam Title</th>
                    <th>Kind</th>
                </tr>
                @foreach (var item in Model.CongNhan.bangDangKies)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.calam.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.kind)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.CongNhan?.IDCongNhan">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
